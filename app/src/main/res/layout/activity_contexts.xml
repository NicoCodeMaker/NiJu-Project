<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".ContextsActivity">

    <!-- ðŸ”¹ CONTENIDO PRINCIPAL CON SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/include_bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo superior -->
            <ImageView
                android:id="@+id/logoNiJu"
                android:layout_width="109dp"
                android:layout_height="119dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/logo_niju"
                android:contentDescription="@string/app_name" />

            <!-- TÃ­tulo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elige un contexto"
                android:textColor="#1A1A1A"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- ðŸ”¹ GRID DE CONTEXTOS -->
            <GridLayout
                android:id="@+id/gridContexts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:alignmentMode="alignMargins"
                android:rowOrderPreserved="false"
                android:layout_marginBottom="32dp">

                <!-- Beach -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/beach_scene" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beach"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="La playa"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Restaurant -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/restaurant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restaurant"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restaurante"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Airport -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/airport" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Airport"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aeropuerto"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Supermarket -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/supermarket" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supermarket"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#1A1A1A"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Supermercado"
                            android:textSize="14sp"
                            android:textColor="#6B7280" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </GridLayout>

            <!-- ðŸ”¹ BOTÃ“N PRINCIPAL -->
            <Button
                android:id="@+id/btnStartSession"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="#007BFF"
                android:text="Comenzar sesiÃ³n de hoy"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ BARRA DE NAVEGACIÃ“N INFERIOR REUTILIZABLE -->
    <include
        android:id="@+id/include_bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
