<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Scroll independiente -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi Ruta de Aprendizaje"
                android:textColor="#0D47A1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <!-- Barra de progreso -->
            <ProgressBar
                android:id="@+id/learningProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:max="100"
                android:progress="20"
                android:progressTint="#1565C0"
                android:backgroundTint="#D6D6D6"
                android:layout_marginBottom="24dp" />

            <!-- Camino de aprendizaje -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Ejemplo módulo 1 -->
                <LinearLayout
                    android:id="@+id/module1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_module_default"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:layout_marginBottom="12dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_lesson"
                        android:layout_marginEnd="10dp" />

                    <TextView
                        android:text="Módulo 1: Fundamentos"
                        android:textColor="#000000"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Aquí puedes duplicar más módulos -->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Incluye la barra de navegación -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation" />
</RelativeLayout>
