<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".RutaActivity">

    <!-- 🔹 CONTENIDO PRINCIPAL CON SCROLL -->
    <ScrollView
        android:id="@+id/scroll_ruta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- 🔹 HEADER CURVADO CON LOGO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/top_shape">

                <ImageView
                    android:id="@+id/logo_abc"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:src="@mipmap/ic_launcher_round"
                    android:contentDescription="@string/logo"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_mi_ruta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mi Ruta"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- 🔹 CARD DE PROGRESO -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/tv_progreso"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Progreso"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />

                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progressIndicator"
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:layout_marginTop="8dp"
                        android:progress="40"
                        app:indicatorColor="@color/green_500"
                        app:trackColor="@color/grey_200" />

                    <TextView
                        android:id="@+id/tv_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="40%"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/black" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 🔹 SECCIÓN DE CONTEXTOS -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contextos"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:paddingStart="4dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvContextos"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginBottom="24dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:overScrollMode="never" />

            <!-- 🔹 SECCIÓN DE RUTA -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Etapas"
                android:textStyle="bold"
                android:textSize="26sp"
                android:textColor="@color/black"
                android:layout_marginBottom="12dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/points_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- 🔸 Restaurante -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/point1_icon"
                            android:layout_width="97dp"
                            android:layout_height="105dp"
                            android:contentDescription="@string/point1"
                            android:src="@drawable/restaurant" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Etapa 1"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                        <!-- ⭐ Ícono de favorito -->
                        <ImageView
                            android:id="@+id/iv_etapa1"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="80dp"
                            android:contentDescription="Marcar favorito"
                            android:src="@drawable/ic_star"
                            app:tint="#FFB300" />

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- 🔹 Aeropuerto -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                android:backgroundTint="@android:color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:id="@+id/points_container2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <!-- 🔸 Ejemplo de punto de la ruta -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="16dp">

                        <ImageView
                            android:id="@+id/point2_icon"
                            android:layout_width="97dp"
                            android:layout_height="105dp"
                            android:contentDescription="@string/point1"
                            android:src="@drawable/airport" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Etapa 2"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                        <ImageView
                            android:id="@+id/iv_etapa2"
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="80dp"
                            android:layout_marginEnd="80dp"
                            android:contentDescription="Marcar favorito"
                            android:src="@drawable/ic_star"
                            app:tint="#FFB300" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!--Etapa3-->
            <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            android:backgroundTint="@android:color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:id="@+id/points_container3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- 🔸 Ejemplo de punto de la ruta -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <ImageView
                        android:id="@+id/point3_icon"
                        android:layout_width="97dp"
                        android:layout_height="105dp"
                        android:contentDescription="@string/point1"
                        android:src="@drawable/supermarket" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Etapa 3"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                    <ImageView
                        android:id="@+id/iv_etapa3"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="80dp"
                        android:layout_marginEnd="80dp"
                        android:contentDescription="Marcar favorito"
                        android:src="@drawable/ic_star"
                        app:tint="#FFB300" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- 🔹 BOTÓN PRINCIPAL -->

            <Button
                android:id="@+id/btnIniciarRuta"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginBottom="40dp"
                android:text="Iniciar recorrido"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/button_background"
                android:elevation="4dp" />
        </LinearLayout>
    </ScrollView>

    <!-- 🔹 BARRA DE NAVEGACIÓN INFERIOR -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"/>
</RelativeLayout>
