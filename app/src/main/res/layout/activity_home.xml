<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".HomeActivity">

    <!-- ðŸ”¹ CONTENIDO PRINCIPAL CON SCROLL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header con logo NiJu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="136dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/top_shape">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="66dp"
                    android:layout_height="109dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="16dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/logo_niju" />
            </LinearLayout>

            <!-- Card de la playa -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/card_gradient_background">

                    <ImageView
                        android:id="@+id/ivBeachImage"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/beach_scene"
                        android:scaleType="centerCrop"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="24dp"
                        android:paddingBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="Beach"
                            android:textColor="#1A1A1A"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="La playa"
                            android:textSize="14sp"
                            android:textColor="#666666" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- BotÃ³n principal -->
            <Button
                android:id="@+id/btnStartSession"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/button_background"
                android:elevation="4dp"
                android:text="Comenzar sesiÃ³n de hoy"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <!-- ðŸ”¹ BARRA DE NAVEGACIÃ“N INFERIOR REUTILIZABLE -->
    <include
        android:id="@+id/bottom_navigation"
        layout="@layout/bottom_navigation"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
