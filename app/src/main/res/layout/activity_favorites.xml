<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F8FC">

    <!-- HEADER -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="6dp"
        android:background="#FFFFFF">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/rounded_button_bg"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Atrás"
            android:padding="8dp"
            android:elevation="4dp" />

        <TextView
            android:id="@+id/tvFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Favoritos"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#0B2540" />


    </RelativeLayout>

    <!-- CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="14dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- CARD 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <!-- Icono con fondo redondeado -->
                    <ImageView
                        android:id="@+id/icon_beach"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/beach_scene"
                        android:contentDescription="Beach icon"
                        android:scaleType="centerCrop" />

                    <!-- Textos -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/title_beach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beach"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#0B2540" />

                        <TextView
                            android:id="@+id/sub_beach"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="La playa"
                            android:textSize="14sp"
                            android:textColor="#7A8B99"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <!-- Estrella -->
                    <ImageView
                        android:id="@+id/star_beach"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="Favorito"
                        android:tint="#FFD056" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_restaurant"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/restaurant"
                        android:contentDescription="Restaurant icon"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/title_restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restaurant"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#0B2540" />

                        <TextView
                            android:id="@+id/sub_restaurant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Restaurante"
                            android:textSize="14sp"
                            android:textColor="#7A8B99"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/star_restaurant"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="Favorito"
                        android:tint="#FFD056" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- CARD 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardUseCompatPadding="true"
                app:cardPreventCornerOverlap="false"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_airport"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/airport"
                        android:contentDescription="Airport icon"
                        android:scaleType="centerCrop" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:id="@+id/title_airport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Airport"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="#0B2540" />

                        <TextView
                            android:id="@+id/sub_airport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aeropuerto"
                            android:textSize="14sp"
                            android:textColor="#7A8B99"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/star_airport"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_star_filled"
                        android:contentDescription="Favorito"
                        android:tint="#FFD056" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- espacio final para que no choque con el bottom nav -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV (simple) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:elevation="6dp"
        android:weightSum="4">

        <!-- item ejemplo -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_home" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio"
                android:textSize="11sp"
                android:textColor="#8A8A8A" />
        </LinearLayout>

        <!-- repetir para otros 3 ítems -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_context" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contextos"
                android:textSize="11sp"
                android:textColor="#8A8A8A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_route" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta"
                android:textSize="11sp"
                android:textColor="#8A8A8A" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_profile_user" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textSize="11sp"
                android:textColor="#8A8A8A" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
